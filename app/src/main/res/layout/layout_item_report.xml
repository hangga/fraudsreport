<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp"
    android:layout_marginLeft="@dimen/padding_page_normal"
    android:layout_marginRight="@dimen/padding_page_normal"
    android:layout_marginTop="@dimen/margin_card_vertical"
    android:layout_marginBottom="@dimen/margin_card_vertical"
    android:minHeight="76dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/selector_global"
        android:paddingTop="@dimen/padding_item_v"
        android:paddingBottom="@dimen/padding_item_v"
        android:paddingLeft="@dimen/padding_item_h"
        android:paddingRight="@dimen/padding_item_h"
        android:layout_height="match_parent"
        android:layout_width="wrap_content">
        <ImageView
            android:id="@+id/imgIcon"
            android:src="@drawable/ic_phone_48dp"
            android:scaleType="fitCenter"
            android:layout_width="42dp"
            android:layout_height="42dp"/>
        <TextView
            android:id="@+id/txtDate"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="@dimen/padding_card_inner_inner"
            android:layout_marginRight="@dimen/padding_card_inner_inner"
            android:layout_toLeftOf="@+id/imgMore"
            android:layout_toRightOf="@+id/imgIcon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="2"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_title_item"
            tools:text="2020-Januari-12"/>

        <TextView
            android:id="@+id/txtNumber"
            android:layout_marginLeft="@dimen/padding_card_inner_inner"
            android:layout_toRightOf="@+id/imgIcon"
            android:layout_below="@+id/txtDate"
            android:fontFamily="@font/roboto_regular"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/brownisgrey"
            android:textSize="@dimen/size_title_item"
            tools:text="Rp.125.000,-"/>
        <ImageView
            android:id="@+id/imgMore"
            android:layout_marginLeft="@dimen/padding_card_inner_inner"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_more_horiz_36dp"
            android:layout_height="32dp"
            android:layout_width="32dp"
            tools:text="Stok"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>